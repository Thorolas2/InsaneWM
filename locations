#!/usr/bin/env bash
# shellcheck disable=1090
# shellcheck disable=1091

BSPDIR="$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &> /dev/null && pwd)"

SCRIPTS=$BSPDIR"/scripts"
LIBRARIES=$BSPDIR"/libraries"
UTILITIES=$BSPDIR"/utilities"
CONFIGURATION=$BSPDIR"/configuration"

SHORTCUTS_DIR="$CONFIGURATION/shortcuts"

export BSPDIR CONFIGURATION SCRIPTS SHORTCUTS_DIR LIBRARIES UTILITIES

sourced=() 
#usage add(utility)
function locations.import {
    if [[ -f "$UTILITIES/$1" ]]; then 
        if [[ ! -z $(echo "${sourced[@]}" | grep "$1") ]]; then return; fi
        source "$UTILITIES/$1" 
        sourced+=("$1")
    fi;
}